@{
    ViewData["Title"] = "Lista de Páginas";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Páginas</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nueva Página</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblPaginasIsts" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>URL</th>
                <th>DESCRIPCION</th>
                <th>OBSERVACION</th>
                <th>USUARIO</th>
                <th>CONTRASEÑA</th>
                <th>ACCION</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/paginasIst.js"></script>
}