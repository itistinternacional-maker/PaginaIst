@model PaginaIst.Models.Mantenimiento

@{
    ViewData["Title"] = "Editar Mantenimientos";
}

<br />
<br />
<h3 class="text-center">Editar Mantenimiento</h3>
<form method="POST" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Fecha"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Fecha" class="form-control" placeholder="Ingresa la fecha" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
            </div> 

            <br />
            
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Placa"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Placa" class="form-control" placeholder="Ingresa la placa" />
                    <span asp-validation-for="Placa" class="text-danger"></span>
                </div>
            </div >

            <br />
            
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Tipo_mantto"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Tipo_mantto" class="form-control" placeholder="Ingresa el Tipo de mantenimiento" />
                    <span asp-validation-for="Tipo_mantto" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Comentario"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Comentario" class="form-control" placeholder="Ingresa el Comentario" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Ruta_evidencias"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Ruta_evidencias" class="form-control" placeholder="Ingresa la Ruta" />
                    <span asp-validation-for="Ruta_evidencias" class="text-danger"></span>
                </div>
            </div>

            <br />

             
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">Editar Mantenimiento</button>
                </div>
                &nbsp;
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver atrás</a>
                </div>
            </div>         
        </div>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}